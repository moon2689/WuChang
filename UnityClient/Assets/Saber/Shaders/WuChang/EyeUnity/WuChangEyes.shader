Shader "Saber/WuChang/Eyes Unity"
{
    Properties
    {
        // Specular vs Metallic workflow
//        _WorkflowMode("WorkflowMode", Float) = 1.0

        [MainTexture] _BaseMap("Albedo", 2D) = "white" {}
        [MainColor] _BaseColor("Color", Color) = (1,1,1,1)
        _PreIntegratedSSSMap("SSS", 2D) = "white"{}
        _ScatteringColor("ScatteringColor", Color) = (1,0.6637605,0.572327,1)
        
        _MaskMap("Mask (R-Roughness, G-?, B-Occlusion)", 2D) = "white"{}
        _IrisMap("Iris?", 2D) = "white"{}
        _IrisColor("IrisColor", Color) = (1,1,1,1)
        _HeightMap("Height", 2D) = "white"{}
        _EyeDirMap("Eye Dir Map", 2D) = "white"{}
        _Depth("Height Offset", Range(0.0, 1.0)) = 0.5
        _CausticIntensity("Caustic Intensity", Range(0.0, 10.0)) = 1.0
        _CausticBlend("Caustic Blend", Range(0.0, 1.0)) = 1.0
        
        _IrisRadius("Iris Radius", Float) = 0.25

        [ToggleOff] _SpecularHighlights("Specular Highlights", Float) = 1.0
        [ToggleOff] _EnvironmentReflections("Environment Reflections", Float) = 1.0

        [Toggle(_NORMALMAP)]_UseNormalMap("Use Normal?", Float) = 1.0
        _BumpMap("Normal Map", 2D) = "bump" {}
        [Toggle(_SPECNORMALMAP)]_UseSpecNormalMap("Use Spec Normal?", Float) = 1.0
        [Normal]_SpecNormalMap("SpecNormal Map", 2D) = "bump" {}

//        _OcclusionStrength("Strength", Range(0.0, 1.0)) = 1.0
